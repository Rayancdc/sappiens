<div class="navbar-wagon">
  <!-- Logo -->
  <div class="nav-item">
    <a href="/" class="navbar-wagon-brand">
    <% if params[:action] == "landing"  %>
      <%= image_tag 'sapiens_logo_branco.png', class: "logo" %>
    <%  else %>
      <%=  image_tag 'sapiens_logo_branco.png', class: "logo" %>
    <% end %>
    </a>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right d-none d-md-block">

    <% if user_signed_in? %>

      <%= link_to "I'm a company", guidelines_experiences_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
        <span class="navbar-wagon-item navbar-wagon-link dropdown">
          <span class="avatar-dropdown" id="navbar-wagon-menu" data-toggle="dropdown"><a href=""><%= current_user.name %></a><img src="<%= current_user.image %>" class="avatar-small" > <i class="dropdown-arrow dropdown-toggle"></i></span>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li class="drop-item">
              <%= link_to dashboard_users_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li class="drop-item">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fas fa-sign-out-alt"></i> <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </span>

    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>

  </div>

<!-- Dropdown appearing on mobile only -->
  <div class="dropdown navbar-wagon-item d-md-none">
    <% if user_signed_in? %>
      <div class="avatar-dropdown" data-toggle="dropdown"><img src="<%= current_user.image %>" class="avatar-small" > <i class="dropdown-arrow dropdown-toggle"></i></div>
    <% else %>
    <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
    <% end %>
    <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
      <li>
        <%= link_to guidelines_experiences_path do %>
          <i class="fas fa-chart-pie"></i> <%= t(".company", default: "I'm a Company") %>
        <% end %>
      </li>
      <% if user_signed_in? %>
      <li>
        <%= link_to dashboard_users_path do %>
          <i class="fa fa-user"></i> <%= t(".profile", default: "My Account") %>
        <% end %>
      </li>
      <li>
        <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fas fa-sign-out-alt"></i>
          <%= t(".sign_out", default: "Log out") %>
        <% end %>
      </li>
      <% else %>
      <!-- Login link (when logged out) -->
      <li>
        <%= link_to new_user_session_path do %>
          <i class="fa fa-user"></i> <%= t(".profile", default: "Login") %>
        <% end %>
      </li>
    <% end %>
    </ul>
  </div>
</div>
<div class="navbar-wrapper"></div>
