<h1 class="text-center">My Experiences</h1>
<h3 class="text-center"><%= link_to "Create a new experience", new_experience_path %></h3>
<div class="content">
    <div class="cards-container">
        <div class="row">
      <% @experiences.each do |experience| %>
              <div class="col-xs-12 col-sm-4">
                <%= link_to experience_path(experience) do %>
                  <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2))">
                      <div class="card-category">Completed</div>
                      <div class="card-description">
                          <h2><%= experience.career %></h2>
                          <p><%= experience.description %></p>
                      </div>
                      <div Class= "ratings">Rating: 4</div>
                      <%= image_tag 'scientist.jpg', class: 'avatar-large' %>   
                  </div> 
                  <% end %>
              </div>
      <% end %>
        </div>
    </div>
</div>