<div class="container">
  <div class="row no-gutters">
    <div class="col-12 col-md-7">
      <% if @experiences.count > 0 %>
        <div class="search-result">
          <h2> We have found <%= @experiences.count %> experiences for you: </h2>
        </div>
      <% else %>
        <div class="sorry-box">
          <h2>Sorry, we coudn't find any experiences for <%= params[:query] %> </h2>
        </div>
      <% end %>
      <% @experiences.each do |experience| %>
      <div class="row exp-wrap no-gutters">
          <div class="d-none d-md-block col-3">
            <div class="card-image"></div>
          </div>
          <div class="col-7 col-md-5">
            <div class="card-info">
              <h2> <%= experience.career %></h2>
              <p style="font-size: 0.8em;"> <strong><%= experience.company.name %></strong> </p>
              <p> <strong> Description:</strong> <%= experience.description %> </p>
            </div>
          </div>
          <div class="col-5 col-md-4">
            <div class="card-price">
              <strong><p style="font-size: 0.7em"><%= number_to_currency(experience.price_cents/100.0, { unit: "$", separator: "," }) %>/day </p></strong>
              <%= link_to "More Info", experience_path(experience), class: "btn btn-whatever" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-12 col-md-5">
      <div class="map-wrapper">
        <div id="map" style="width: 100%; height: 100%;" data-markers="<%= @markers.to_json %>" ></div>
      </div>
    </div>
  </div>
</div>
