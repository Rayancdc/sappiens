<div class="exp-banner" style="background-image: linear-gradient(-225deg, rgba(0, 0, 0, 0.5) 0%, rgba(0, 0, 0, 0.3) 100%), url(
	<% if @booking.event.experience.image %>
	<%= @booking.event.experience.image.url %>
	<% else %>
	<%= image_path('bannersun.jpg') %>
	<% end %>);">
	<div class="exp-banner-content">
		<h1> <%= @booking.event.experience.career %> </h1>
	</div>
</div>


<div class="container vcenter">
			<h3> Payment Details </h3>
					<div class="booking-details">
						<h2><%= @booking.event.experience.career %></h2>
						<h4><em><strong>An experience by <%= @booking.event.experience.company.name %><strong></em></h4>
						<p><strong>Your price paid: <%= number_to_currency(@booking.event.experience.price_cents/100.0, { unit: "R$", separator: "," }) %></strong></p>
						<p><strong>Your date is scheduled: <%=@booking.event.date %><strong></p>
								<%= link_to my_bookings_users_path, method: :get do %><button type="button" class="btn btn-treehouse">Go to My Bookings</button> 
								<% end %>
					   </div>
					</div>
				</div>
		</div>
	</div>