<div class="index-box">

  <div class="exp-container">
    <div class="row">
      <% if @bookings.count > 0 %>
        <% @bookings.each do |booking| %>
          <div class="col-md-12">
            <div class="experience-card">
              <div class="card-image"></div>
              <div class="card-info">
                <h2> <%= booking.experience.name %></h2>
                <p> <%= booking.experience.company.name %> </p>
              </div>
              <div class="card-price">
                <strong><%= number_to_currency(booking.experience.price_cents/100.0, { unit: "R$", separator: "," }) %> / day </strong>
                <%= link_to "More Info", booking_path(booking), class: "btn btn-success" %>
              </div>


            </div>
          </div>
        <% end %>
      <% else %>
        <div class="sorry-box">
          <h2>Sorry, we coudn't find any bookings for <%= params[:query] %> </h2>
        </div>
      <% end %>
    </div>
  </div>

  <div class="map-wrapper">
    <div id="map" style="width: 100%; height: 100%;" data-markers="<%= @markers.to_json %>" ></div>
  </div>

</div>


